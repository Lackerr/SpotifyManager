<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spotify_Manager.SelectTargetPlaylistPage"
             xmlns:viewModels="clr-namespace:Spotify_Manager.ViewModels"
             xmlns:models="clr-namespace:Spotify_Manager.Models"
             x:DataType="viewModels:SelectTargetPlaylistViewModel"
             Title="{Binding Title}"
             BackgroundColor="#191414">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Picker ItemsSource="{Binding Playlists}" ItemDisplayBinding="{Binding name}" Title="Ziel-Playlist" SelectedIndexChanged="Picker_OnSelectedIndexChanged">
                
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>