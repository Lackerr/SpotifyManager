<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spotify_Manager.MergePlaylistsPage"
             xmlns:viewModels="clr-namespace:Spotify_Manager.ViewModels"
             xmlns:models="clr-namespace:Spotify_Manager.Models"
             x:DataType="viewModels:MergePlaylistsViewModel"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Playlists mergen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Quell-Playlists:"></Label>
            <CollectionView ItemsSource="{Binding Playlists}"  SelectionMode="Multiple">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Playlist">
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}"></Label>
                        </StackLayout>
                    </DataTemplate>
                    </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>